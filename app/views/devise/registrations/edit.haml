- content_for :heading do
  .masthead
    .container
      %h1 Edit #{resource_name.to_s.humanize}

.container.text-section-no-flowtype
  %row
    .col-md-6.col-md-offset-3
      = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = f.email_field :email, autofocus: true
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.password_field :password, autocomplete: "off", help: "(leave blank if you don't want to change it)"
        = f.password_field :password_confirmation, autocomplete: "off"
        = f.password_field :current_password, autocomplete: "off", help: "(we need your current password to confirm your changes)"
        = f.submit "Update"
      %div.pull-right
        = button_to "Delete my account", registration_path(resource_name), data: { confirm: "Permanently delete your account?" }, method: :delete, class: "btn btn-danger", style: "margin-top: -56px"
      %br
      = link_to "Back", :back
